FROM python:3.11-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Install Ollama
RUN curl -fsSL https://ollama.com/install.sh | sh

# Set working directory
WORKDIR /app

# Copy requirements first (for better caching)
COPY requirements.txt .

# Debug: Show requirements content
RUN echo "=== Requirements file content ===" && \
    cat requirements.txt

# Install Python packages with error checking
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# Debug: Show installed packages
RUN echo "=== Installed Python packages ===" && \
    pip list | grep -E "(fastapi|uvicorn|pydantic|ollama)"

# Copy application code
COPY . .

# Expose port
EXPOSE 8000

# Start Ollama and FastAPI
CMD ["sh", "-c", "ollama serve & sleep 15 && ollama pull gemma2:2b && python gpt.py"]
